{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "src",
    "lib": ["ES2022"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
}